{
  "name": "jikan4.js",
  "version": "1.4.0",
  "description": "A Node.js wrapper for Jikan API v4.",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "esm/Jikan.mjs",
  "type": "commonjs",
  "exports": {
    ".": [
      {
        "require": "./dist/index.js",
        "import": "./esm/Jikan.mjs",
        "default": "./dist/index.js"
      }
    ]
  },
  "scripts": {
    "build-docs": "npx typedoc ./src/index.ts",
    "build": "npx rimraf ./dist; tsc",
    "lint": "npx eslint ./src/**/*.ts --fix",
    "test": "node dist/test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rizzzigit/jikan4.js.git"
  },
  "keywords": [
    "Anime",
    "Manga",
    "API",
    "Wrapper"
  ],
  "author": "rizzzigit",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rizzzigit/jikan4.js/issues"
  },
  "homepage": "https://rizzzigit.github.io/jikan4.js/",
  "devDependencies": {
    "@types/node": "^15.14.9",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "eslint": "^8.20.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@rizzzi/eventemitter": "^1.0.0",
    "parse-duration": "^1.0.0",
    "tslib": "^1.14.1"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=12.0.0",
    "vscode": "^1.66.2"
  }
}
